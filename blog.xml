---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>وبلاگ پاسگاه</title>
  <id>{{ site.url }}{{ site.baseurl }}/</id>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <link href="{{ '/blog.xml' | absolute_url }}" rel="self"/>
  {% for post in site.posts limit:1000 %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <link href="{{ post.url | absolute_url }}"/>
    <id>{{ post.url | absolute_url }}</id>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{% if post.last_modified_at %}{{ post.last_modified_at | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</updated>
    <author>
      <name>وبلاگ پاسگاه</name>
    </author>
    <summary>{{ post.excerpt | strip_html | truncate: 160 }}</summary>
  </entry>
  {% endfor %}
</feed>
