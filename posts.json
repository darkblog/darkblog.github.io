---
layout: null
---

{% assign posts = site.posts %}
{
  "posts": [
    {% for post in posts %}
    {
      "id": "{{ post.id | sha1 }}",
      "slug": "{{ post.slug | default: post.name | replace: '.md', '' }}",
      "title": "{{ post.title | escape }}",
      "excerpt": "{{ post.excerpt | default: post.content | strip_html | truncate: 150 | escape }}",
      "date": "{{ post.date | date_to_xmlschema }}",
      "image": "{{ post.image | default: post.cover_image | default: site.default_image | default: 'https://images.unsplash.com/photo-1499951360447-b19be8fe80f5?ixlib=rb-4.0.3&auto=format&fit=crop&w=1170&q=80' }}",
      "url": "{{ post.url | absolute_url }}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "count": {{ posts.size }},
  "generated_at": "{{ site.time | date_to_xmlschema }}"
}
